# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quickzone_db
DB_USER=quickzone_user
DB_PASSWORD=waelrh

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
